<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:layout_marginTop="@dimen/padding2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/uni_icon"
            android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/slide_two_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_page_3_title"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/padding"
            style="@style/texttitlestyle" />

        <TextView
            android:id="@+id/slide_two_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding2"
            android:gravity="center_horizontal"
            android:text="@string/welcome_page_3_text"
            android:textAlignment="center"
            style="@style/textdatastyle"
            android:layout_below="@+id/slide_two_title"/>

        <LinearLayout
            android:id="@+id/layout_onboarding_icon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/slide_two_doc"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

        <ImageView
            android:layout_width="@dimen/onboarding_icon_width"
            android:layout_height="@dimen/onboarding_icon_width"
            android:layout_below="@+id/slide_two_doc"
            android:layout_marginTop="@dimen/padding2"
            android:layout_gravity="start|left"
            android:layout_weight="1"
            app:srcCompat="@drawable/gg_environment" />

        <ImageView
            android:layout_width="@dimen/onboarding_icon_width"
            android:layout_height="@dimen/onboarding_icon_width"
            android:layout_below="@+id/slide_two_doc"
            android:layout_marginTop="@dimen/padding2"
            android:layout_gravity="end|right"
            android:layout_weight="1"
            app:srcCompat="@drawable/gg_economicwellbeing" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_onboarding_icon2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_onboarding_icon1"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:layout_width="@dimen/onboarding_icon_width"
                android:layout_height="@dimen/onboarding_icon_width"
                android:layout_below="@+id/slide_two_doc"
                android:layout_marginTop="@dimen/padding2"
                android:layout_gravity="start|left"
                android:layout_weight="1"
                app:srcCompat="@drawable/gg_socialwellbeing" />

            <ImageView
                android:layout_width="@dimen/onboarding_icon_width"
                android:layout_height="@dimen/onboarding_icon_width"
                android:layout_below="@+id/slide_two_doc"
                android:layout_marginTop="@dimen/padding2"
                android:layout_gravity="end|right"
                android:layout_weight="1"
                app:srcCompat="@drawable/gg_goodgovernance" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>