<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="9dp"
        card_view:cardElevation="2dp"
        android:layout_margin="10dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding2">

        <RelativeLayout
                android:id="@+id/headding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtName"
                style="@style/texttitlestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="19dp"
                android:layout_marginRight="@dimen/profilearrowsize"
                android:maxLines="1"
                android:layout_toRightOf="@+id/imageview_icon"
                android:text="Large Tehhhhhhhhhhhhhhhhhhhh" />

            <ImageView
                    android:layout_width="@dimen/profilearrowsize"
                    android:layout_height="@dimen/profilearrowsize"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />

            <ImageView
                android:id="@+id/imageview_icon"
                android:layout_width="@dimen/img_category_size"
                android:layout_height="@dimen/img_category_size"
                android:scaleType="fitCenter"
                card_view:srcCompat="@drawable/ic_menu_gallery"></ImageView>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_below="@+id/headding">

            <TextView
                android:id="@+id/txtDoc"
                style="@style/Textprofiledata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginEnd="@dimen/padding"
                android:layout_marginBottom="@dimen/padding"
                android:text="Small Textggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg gggggggggggggg gggggggggggggggg gggggggggggggg ggggggggggg ggggggggggggggggggggggggggggggggg"
                android:visibility="gone" />
            <!--android:layout_toRightOf="@+id/imageview_icon" -->

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>