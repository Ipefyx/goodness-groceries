            <ImageView
                    android:layout_width="@dimen/profilearrowsize"
                    android:layout_height="@dimen/profilearrowsize"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_below="@+id/headding">

            <ImageView
                    android:id="@+id/imageview_icon"
                    android:layout_width="@dimen/img_category_size"
                    android:layout_height="@dimen/img_category_size"
                    android:layout_centerVertical="true"
